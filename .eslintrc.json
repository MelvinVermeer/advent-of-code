{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "implicit-arrow-linebreak": "off",
        "indent": "off",
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ]
    }
}